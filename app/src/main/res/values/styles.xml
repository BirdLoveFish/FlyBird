<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="overlapAnchor">false</item>
    </style>

    <style name="MyDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="safeBoxPopMenuStyle" parent="AppTheme">
        <item name="popupMenuStyle">@style/popMenuStyle</item>
        <item name="dropDownListViewStyle">@style/popMenuDivide</item>
        <item name="textAppearanceSmallPopupMenu">@style/popMenuText</item>
        <item name="textAppearanceLargePopupMenu">@style/popMenuText</item>
    </style>

    <style name="popMenuStyle" parent="@android:style/Widget.PopupMenu">
        <item name="android:background">@color/colorBlack</item>
    </style>

    <style name="popMenuText">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="popMenuDivide">
        <item name="android:divider">@color/colorGrey</item>
        <item name="android:height">2sp</item>
    </style>

</resources>
